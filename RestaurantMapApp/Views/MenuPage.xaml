<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:RestaurantMapApp.Converters"
             x:Class="RestaurantMapApp.Views.MenuPage"
             Title="Menü">
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <!-- Restoran Bilgileri -->
            <Frame Padding="15" CornerRadius="10" BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}">
                <StackLayout Spacing="10">
                    <Label x:Name="RestaurantNameLabel" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center" />
                    
                    <Label x:Name="AddressLabel" 
                           FontSize="16" 
                           HorizontalOptions="Center" 
                           TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
                    
                    <Label x:Name="DescriptionLabel" 
                           FontSize="14" 
                           HorizontalOptions="Center" 
                           TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
                    
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="20">
                        <Label x:Name="RatingLabel" FontSize="16" />
                        <Label x:Name="PriceRangeLabel" FontSize="16" />
                    </StackLayout>
                </StackLayout>
            </Frame>

            <!-- İletişim Bilgileri -->
            <Frame Padding="15" CornerRadius="10" BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}">
                <StackLayout Spacing="10">
                    <Label Text="İletişim Bilgileri" 
                           FontSize="18" 
                           FontAttributes="Bold" />
                    
                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Label Text="📞" FontSize="20" />
                        <Label x:Name="PhoneLabel" FontSize="16" VerticalOptions="Center" />
                    </StackLayout>
                    
                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Label Text="🌐" FontSize="20" />
                        <Label x:Name="WebsiteLabel" FontSize="16" VerticalOptions="Center" />
                    </StackLayout>
                </StackLayout>
            </Frame>

            <!-- Mutfak Türleri -->
            <Frame Padding="15" CornerRadius="10" BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}">
                <StackLayout Spacing="10">
                    <Label Text="Mutfak Türleri" 
                           FontSize="18" 
                           FontAttributes="Bold" />
                    
                    <CollectionView x:Name="CuisineTypesCollection">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="10,5" 
                                       BackgroundColor="{AppThemeBinding Light={StaticResource Blue100}, Dark={StaticResource Blue900}}" 
                                       CornerRadius="15" 
                                       HorizontalOptions="Start">
                                    <Label Text="{Binding}" 
                                           HorizontalOptions="Center" 
                                           VerticalOptions="Center" />
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </Frame>

            <!-- Menü Listesi -->
            <Frame Padding="15" CornerRadius="10" BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}">
                <StackLayout Spacing="15">
                    <Label Text="🍽️ Menü" 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center" />
                    
                    <CollectionView x:Name="MenuItemsCollection" HeightRequest="400">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="15" 
                                       Margin="0,5" 
                                       CornerRadius="10" 
                                       BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray800}}"
                                       HasShadow="True">
                                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                                        <!-- Yemek Adı ve Kategori -->
                                        <StackLayout Grid.Column="0" Grid.Row="0" Spacing="5">
                                            <Label Text="{Binding Name}" 
                                                   FontSize="16" 
                                                   FontAttributes="Bold" />
                                            <Label Text="{Binding Category}" 
                                                   FontSize="12" 
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
                                        </StackLayout>
                                        
                                        <!-- Fiyat -->
                                        <Label Grid.Column="1" Grid.Row="0" 
                                               Text="{Binding Price, StringFormat='{0:C}'}" 
                                               FontSize="18" 
                                               FontAttributes="Bold" 
                                               TextColor="{StaticResource Primary}"
                                               VerticalOptions="Center" />
                                        
                                        <!-- Açıklama -->
                                        <Label Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" 
                                               Text="{Binding Description}" 
                                               FontSize="14" 
                                               TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}"
                                               Margin="0,10,0,0" />
                                        
                                        <!-- Durum -->
                                        <Frame Grid.Column="1" Grid.Row="1" 
                                               Padding="8,4" 
                                               CornerRadius="12" 
                                               BackgroundColor="{Binding IsAvailable, Converter={StaticResource AvailabilityColorConverter}}"
                                               HorizontalOptions="End"
                                               VerticalOptions="End">
                                            <Label Text="{Binding IsAvailable, Converter={StaticResource AvailabilityTextConverter}}" 
                                                   FontSize="10" 
                                                   TextColor="White"
                                                   FontAttributes="Bold" />
                                        </Frame>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </Frame>

            <!-- Menü Linki -->
            <Button x:Name="MenuButton" 
                    Text="Menüyü Görüntüle" 
                    BackgroundColor="{StaticResource Primary}" 
                    TextColor="White" 
                    CornerRadius="25" 
                    Padding="20,15" 
                    Clicked="MenuButton_Clicked" />
        </StackLayout>
    </ScrollView>
</ContentPage> 