<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RestaurantMapApp"
             xmlns:converters="clr-namespace:RestaurantMapApp.Converters"
             x:Class="RestaurantMapApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converter'lar -->
            <converters:AvailabilityColorConverter x:Key="AvailabilityColorConverter" />
            <converters:AvailabilityTextConverter x:Key="AvailabilityTextConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
